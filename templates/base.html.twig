<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        {% endblock %}
    </head>
    <body>

        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link" href="{{path('index')}}">Accueil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{path('admin')}}">Admin</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{path('Debug')}}">Debug</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" href="{{path('myform')}}">S'inscrire</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" href="{{path('login')}}">Connect</a>
            </li>
            <li>
                <a class="nav-link disabled" href="{{path('deconnecter')}}">Disconnect</a>
            </li>
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link disabled" href="{{path('gestionadmin')}}">Gestion Admin</a>
                </li>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') or is_granted('ROlE_USER')%}
                <li class="nav-item">
                    <a class="nav-link disabled" href="{{path('logout')}}">Disconnect</a>
                </li>
            {% endif %}
        </ul>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
