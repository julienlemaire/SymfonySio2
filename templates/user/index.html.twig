{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Sexe</th>
                <th>Datenaissance</th>
                <th>Nationalité</th>
                <th>Télèphone</th>
                <th>Addresse</th>
                <th>Codepostale</th>
                <th>Ville</th>
                <th>Email</th>
                <th>Mdp</th>
                <th>Recevoirmail</th>
                <th>Accident</th>
                <th>Droitimage</th>
                <th>Infocomplementaire</th>
                <th>Idrole</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.sexe ? 'Yes' : 'No' }}</td>
                <td>{{ user.datenaissance ? user.datenaissance|date('Y-m-d') : '' }}</td>
                <td>{{ user.nationalite }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.addresse }}</td>
                <td>{{ user.codepostale }}</td>
                <td>{{ user.ville }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.mdp }}</td>
                <td>{{ user.recevoirmail }}</td>
                <td>{{ user.accident ? 'Yes' : 'No' }}</td>
                <td>{{ user.droitimage ? 'Yes' : 'No' }}</td>
                <td>{{ user.infocomplementaire }}</td>
                <td>{{ user.idrole }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
